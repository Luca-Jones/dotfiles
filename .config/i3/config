# i3 config file (v4)
include ~/.config/i3/keybinds.conf
include ~/.config/i3/visuals.conf
include ~/.config/i3/exec.conf

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

exec --no-startup-id nm-applet
exec --no-startup-id flameshot
exec_always --no-startup-id ~/.config/polybar/polybar.sh
# exec_always feh --bg-scale ~/Pictures/wallpapers/waterfront.jpg
exec_always nitrogen --set-zoom-fill ~/Pictures/wallpapers/sand.jpg
exec_always --no-startup-id picom

# to find your touchpad simply run xinput
set $xid $(xinput list --id-only 'ELAN067B:00 04F3:31F8 Touchpad')
exec_always --no-startup-id xinput set-prop $xid "libinput Natural Scrolling Enabled" 1
exec_always xrandr --output eDP-1 --mode 1920x1200
exec_always xrandr --output HDMI-1 --auto --right-of eDP-1

#bar {
#        position top
#	status_command i3status
#}

